<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/utd1"
    tools:context="com.deitel.studymatch.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/activity_horizontal_margin"

        android:id="@+id/studymatch"
        android:text="@string/app_name"
        />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:id="@+id/radiogroup"
        android:layout_below="@id/studymatch">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"

            android:id="@+id/studentLogin"
            android:text="@string/studentlogin" />

        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:id="@+id/tutorLogin"
            android:text="@string/tutorlogin" />

    </RadioGroup>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:background="@null"
        android:textColor="@color/white"

        android:text="@string/help"
        android:id="@+id/help"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/help"
        android:background="@null"
        android:textColor= "@color/white"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:text="@string/aboutus"
        android:id="@+id/aboutus"
        />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/help"
        android:background="@null"
        android:textColor= "@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:text="@string/contactus"
        android:id="@+id/contactus"
       />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/help"
        android:background="@drawable/border"
        android:textColor="@color/white"

        android:text="@string/createNewAccount"
        android:id="@+id/CreateAccountButton"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@+id/facebookButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

        android:text="@string/loginWithGmail"
        android:id="@+id/gmailButton"
        />

    <com.facebook.login.widget.LoginButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/radiogroup"
        android:layout_marginBottom="40dp"
        android:background="@color/colorPrimary"
        android:padding="15dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"

        android:id="@+id/facebookButton"
        />

</RelativeLayout>
